import java.util.Scanner;

public class Task11 {

	public static void main(String[] args) {
		int number, cntLeft = 0, cntRight = 0;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the number: ");
		number = sc.nextInt();
		for (int i=1; i<10; i += 2)
		{
		    for (int j=0; j<i; j++)
		    {
		        System.out.print("*");
		    }
		    for(int k = 0; (k*2)<i; k++){
		    	System.out.println("");
		    }
		}

	}

}
