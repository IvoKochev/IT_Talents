import java.util.Scanner;

public class Task11 {

	public static void main(String[] args) {
		int number;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the number: ");
		number = sc.nextInt();
		for(int i = 1; i<=number; i++){
			for(int j = 1; j<=(number - 1); j++){
				System.out.print(" ");
			}
			for(int k = number; k>0; k--){
				System.out.print("*");
			}
		}

	}

}
