package bg.ittalents.boardGame.game;

/**
 *
 * @author slavi
 */
public interface IBoard {

    static final String ANSI_RED = "\u001B[31m";
    static final String ANSI_BLACK = "\u001B[30m";
    static final String ANSI_GOLD = "\u001B[33m";
    static final String ANSI_RED_BACKGROUND = "\u001B[41m";
    static final String ANSI_GOLD_BACKGROUND = "\u001B[43m";
    static final String ANSI_GREEN_BACKGROUND = "\u001B[42m";
    static final String ANSI_BLUE_BACKGROUND = "\u001B[44m";
    static final String ANSI_WHITE_BACKGROUND = "\u001B[40m";

    public void makeMatrix(int row, int col);

    public String[][] getMatrixx();
}
